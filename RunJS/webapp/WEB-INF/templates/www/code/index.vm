<script type="text/javascript">
	var runjs;
	$(document).ready(function(){
		dialog = new Dialog();
		flow = new Flow();
		var explorer = new Explorer({
			target:$(".explorer"),
			fold:$(".fold_control"),
			core:$(".core"),
			show:#if($show_explorer)true#{else}false#end
		});
		var editor = new Editor({
			target:$(".editor_wrapper")
		});
		var menu = new Menu({
			target:$(".headerMenu"),
		});
		runjs = new RunJS({
			editor:editor,
			explorer:explorer,
			menu:menu,
			flow:flow,
			dialog:dialog,
			plugins:plugins,
			cur_opt:"login",
			mode:'${mode}'
		});
		#if($action.length()!=0)runjs.checkProxy('${action}');#end
	});
</script>
